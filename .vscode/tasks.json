{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Application",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
        "build"
      ],
      "group": "build",
      "options": {
        "shell": {
          "executable": "/bin/zsh"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "run",
